            <label>Name</label>
            <input type="text" name="placeName">
            <label>Card Image URL</label>
            <input type="text" name="cardImageURL">
            <label>Main Image URL</label>
            <input type="text" name="mainImageURL">
            
            <div class="tour1">
                <label>Tour Website Name 1</label>
                <input type="text" name="tourText1">
                <label>Tour Website Link 1</label>
                <input type="text" name="tourURL1">
            </div>
            <div class="tour2">
                <label>Tour Website Name 2</label>
                <input type="text" name="tourText2">
                <label>Tour Website Link 2</label>
                <input type="text" name="tourURL2">
            </div>
            <div class="tour3">
                <label>Tour Website Name 3</label>
