<%- include('../partials/header') %>

<h1>Enter New Historical Site Information</h1>

<form id="new-form" action="/wonders" method="POST">
    <label>Name</label>
    <input type="text" name="placeName">
    <label>Description</label>
    <input type="text" name="description">
    <label>Card Image URL</label>
    <input type="text" name="cardImageURL">
    <label>Main Image URL</label>
    <input type="text" name="mainImageURL">
    <label>Tour Website Name</label>
    <input type="text" name="tourText">
    <label>Tour Website Link</label>
    <input type="text" name="tourURL">
    <div class="switchbox">
        <p class="hswitch">Historical Site</p>
        <label class="switch">
            <input type="checkbox" name="isNature">
            <span class="slider round"></span>
        </label>
        <p class="hswitch">Natural Wonder</p>
    </div>
    <input type="submit" value="Add New Wonder">
</form>

<%- include('../partials/footer') %>