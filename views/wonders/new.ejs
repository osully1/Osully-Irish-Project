            <textarea name="description" rows="7"></textarea>
            <label>Main Description</label>
            <textarea name="descriptionMain1"></textarea>
            <textarea name="descriptionMain2"></textarea>
            <textarea name="descriptionMain3"></textarea>
            <textarea name="descriptionMain4"></textarea>
        <!-- </div> -->
    <!-- </div> -->
    <div class="switchbox">
        <p class="hswitch">Historical Site</p>
        <label class="switch">
            <input type="checkbox" name="isNature">
            <span class="slider round"></span>
        </label>
        <p class="hswitch">Natural Wonder</p>
    </div>
    <input type="submit" value="Add New Wonder">
</form>

