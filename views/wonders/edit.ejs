<%- include('../partials/header') %>

<h1>Edit This Entry</h1>

<form id="new-form" action="/wonders" method="POST">
    <label>Name</label>
    <input type="text" name="placeName" value="<%= wonder.placeName %>">
    <label>Card Image URL</label>
    <input type="text" name="cardImageURL" value="<%= wonder.cardImageURL %>">
    <label>Main Image URL</label>
    <input type="text" name="mainImageURL" value="<%= wonder.mainImageURL %>">
    <label>Tour Website Name</label>
    <input type="text" name="tourText" value="<%= wonder.tourText %>">
    <label>Tour Website Link</label>
    <input type="text" name="tourURL" value="<%= wonder.tourURL %>">
    <label>Card Description</label>
    <textarea name="description"><%= wonder.description %></textarea>
    <label>Main Description</label>
    <textarea name="descriptionMain"><%= wonder.descriptionMain %></textarea>
    <div class="switchbox">
        <p class="hswitch">Historical Site</p>
        <label class="switch">
            <input type="checkbox" name="isNature">
            <span class="slider round"></span>
        </label>
        <p class="hswitch">Natural Wonder</p>
    </div>
    <input type="submit" value="Add New Wonder">
</form>

<%- include('../partials/footer') %>